<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orangeLight"
    android:padding="10dp"
    tools:context=".RecognizeApp.MainActivity">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ScanText"
      android:textSize="35dp"
      android:fontFamily="@font/poppins"
      android:layout_gravity="center"
      android:textColor="@color/orange"
      android:layout_marginTop="5sp"
      />


  <ImageView
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:id="@+id/img"
      android:src="@drawable/ic_imageview"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_marginTop="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seleccionar imagen"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:id="@+id/btnSelectImage"
        android:layout_marginHorizontal="5dp"
        android:drawableBottom="@drawable/ic_selectimg"
        android:backgroundTint="@color/orange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconocer texto"
        android:textSize="11sp"
        android:id="@+id/btnRecognizeText"
        android:layout_marginHorizontal="5dp"
        android:drawableBottom="@drawable/ic_recognizetext"
        android:backgroundTint="@color/orange"
        />

  </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisplay"
        tools:text="@tools:sample/lorem/random"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/orange_border"

        />
  </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>